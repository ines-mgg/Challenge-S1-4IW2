{% extends 'dashboard/base.html.twig' %}

{% block title %}Modifier une prestation{% endblock %}

{% block body %}
<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700">
    <div class="w-full mb-1">
        <div class="mb-4">
            <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white py-3 px-2">Modifier la prestation n° {{ prestation.id }}</h1>
            <div class="items-center justify-between block sm:flex md:divide-x md:divide-gray-100 dark:divide-gray-700">
                <button type="submit" class="inline-flex items-center px-5 text-light-white py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center bg-black bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
                    <a href="{{ path('app_prestation_index') }}">Retour à la liste</a>
                </button>
                <form method="post" action="{{ path('app_prestation_delete', {'id': prestation.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cette prestation ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prestation.id) }}">
                    <button class="btn bg-red-700 hover:bg-red-800 text-white font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none   focus:ring-4 focus:ring-red-300  dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Delete</button>
                </form>
            </div>
    {{ include('prestation/_form.html.twig', {'button_label': 'Modifier'}) }}
    </div>
    </div>
</div>
{% endblock %}
