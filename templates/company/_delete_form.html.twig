<form
  method="post"
  action="{{ path('app_company_delete', { id: company.id }) }}"
  onsubmit="return confirm('Voulez-vous supprimer cette entreprise ?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ company.id) }}"
  />
  <button class="btn">Supprimer</button>
</form>
