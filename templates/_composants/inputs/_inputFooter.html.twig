{% set inputType = inputType ?? "text" %} 
{% set inputId = inputId ?? "" %} 
{% set inputName = inputName ?? "" %}
{% set inputPlaceholder = inputPlaceholder ?? "" %}
{% set inputSize = inputSize ?? ""%}

<input
  class="bg-light-white dark:bg-light-dark border-b border-light-dark dark:border-light-white placeholder:text-grey dark:placeholder:text-light-white text-xs font-bold leading-normal"
  type = {{inputType}}
  name = {{inputName}}
  id = {{inputId}}
  placeholder="{{inputPlaceholder}}"
  size="{{inputSize}}"
/>
