{% set titleCard = titleCard %} {% set linkSee = linkSee %} {% set linkEdit =
linkEdit %} {% set linkDelete = linkDelete %} {% set id = id %}
<div
  class="flex flex-col rounded border border-solid border-light-dark bg-white text-light-dark px-8 items-center"
>
  {% if titleCard is defined and titleCard %}
  <h1 class="text-lg font-semibold leading-normal">
    {{ titleCard }}
  </h1>
  <section class="flex gap-4">
    <a class="hover:text-electric-blue" href="{{ path(linkSee, { id: id }) }}">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
      >
        <path
          fill="currentColor"
          d="M12 9a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3m0 8a5 5 0 0 1-5-5a5 5 0 0 1 5-5a5 5 0 0 1 5 5a5 5 0 0 1-5 5m0-12.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5"
        />
      </svg>
    </a>
    <a class="hover:text-yellow-400" href="{{ path(linkEdit, { id: id }) }}">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
      >
        <path
          fill="currentColor"
          d="M3 21v-4.25L16.2 3.575q.3-.275.663-.425t.762-.15q.4 0 .775.15t.65.45L20.425 5q.3.275.438.65T21 6.4q0 .4-.137.763t-.438.662L7.25 21zM17.6 7.8L19 6.4L17.6 5l-1.4 1.4z"
        />
      </svg>
    </a>
    {#TODO : find another way, delete is a form#}
    <a class="hover:text-red-700" href="{{ path(linkDelete, { id: id }) }}">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
      >
        <path
          fill="currentColor"
          d="M19 4h-3.5l-1-1h-5l-1 1H5v2h14M6 19a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V7H6z"
        />
      </svg>
    </a>
  </section>
  {% endif %}
</div>
