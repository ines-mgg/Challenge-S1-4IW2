{% set cardShadow = cardShadow ?? 'shadow-custom-blue' %}
{% set pictureName = pictureName ?? false %}
{% set pictureWidth = pictureWidth ?? '400px' %}
{% set pictureHeight = pictureHeight ?? '300px' %}
{% set titleCard = titleCard ?? false %}
{% set paragraphCard = paragraphCard ?? false %}
{% set subtitleCard = subtitleCard ?? false %}
{% set linkCard = linkCard ?? false %}
<div
  class="w-7 h-103 flex flex-col rounded border border-solid border-light-dark {{cardShadow}} bg-white text-light-dark"
>
  {%if pictureName is defined and pictureName %}
  <img src="{{ asset("build/images/" ~ pictureName) }}" alt="Picture card" width="{{pictureWidth}}" height="{{pictureHeight}}" />
  {% endif %}
  <section class="w-7">
    {%if titleCard is defined and titleCard %}
    <h1 class="w-96 h-5 ml-4 mt-3.5 text-lg font-semibold leading-normal">
      {{titleCard}}
    </h1>
    {% endif %}
    {%if paragraphCard is defined and paragraphCard %}
    <p class="w-80 text-sm font-medium leading-normal ml-4 mt-3 mr-8 mb-2">
      {{paragraphCard}}
    </p>
    {% endif %}
    {%if subtitleCard is defined and subtitleCard %}
    <h1
      class="w-96 h-5 text-lg font-semibold leading-normal ml-4 mr-2.5 mb-2.5"
    >
      {{subtitleCard}}
    </h1>
    {% endif %} 
    {%if linkCard is defined and linkCard %}
    <a
      href="#"
      class="inline-flex items-center gap-2.5 ml-4 text-base font-semibold leading-normal underline"
      >{{linkCard}}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="17"
        height="16"
        viewBox="0 0 17 16"
        fill="none"
      >
        <path
          d="M16.7071 8.70711C17.0976 8.31658 17.0976 7.68342 16.7071 7.29289L10.3431 0.928933C9.95262 0.538409 9.31946 0.538409 8.92893 0.928933C8.53841 1.31946 8.53841 1.95262 8.92893 2.34315L14.5858 8L8.92893 13.6569C8.53841 14.0474 8.53841 14.6805 8.92893 15.0711C9.31946 15.4616 9.95262 15.4616 10.3431 15.0711L16.7071 8.70711ZM-7.71377e-08 9L16 9L16 7L7.71377e-08 7L-7.71377e-08 9Z"
          fill="black"
        />
      </svg>
    </a>
    {% endif %}
  </section>
</div>
