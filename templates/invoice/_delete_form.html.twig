<form
  method="post"
  action="{{ path('app_invoice_delete', { id: invoice.id }) }}"
  onsubmit="return confirm('Are you sure you want to cancel this item?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ invoice.id) }}"
  />
  <button
    class="btn inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-red-600 hover:text-red-800 disabled:opacity-50 disabled:pointer-events-none dark:text-blue-500 dark:hover:text-blue-400 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600"
  >
    Cancel
  </button>
</form>
